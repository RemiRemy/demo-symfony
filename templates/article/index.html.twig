{% extends 'base.html.twig' %}

{% block title %}Mon super site
{% endblock %}


{% block body %}


	<div class="row" style="justify-content: center;">

		{% for article in articles %}
			<a class="text-decoration-none" style="width: auto;"
        href="{{ path('detail_article',{'id': article.id})}}">
				<div class="card border-light mb-3" style="max-width: 20rem;">
					<div class="card-header">
						Créé le
						{{article.dateCreation | date('d/m/Y') }}
						à
						{{article.dateCreation | date('H:i') }}
						catégorie :
						{{article.categorie.designation}}
            prix:
            {{article.prix}}
            €
			
					</div>
					<div class="card-body">
						<h4 class="card-title">{{ article.designation }}</h4>
						<p class="card-text">{{article.description}}</p>
						{% if article.nomImage  %}
						<img src="/uploads/{{ article.nomImage }}" style="max-width:9rem">
						{% endif %}
					</div>
				</div>
			</a>

		{% endfor %}
	</div>
{% endblock %}
